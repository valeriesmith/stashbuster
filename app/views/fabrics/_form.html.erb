<% if @errors != nil %> 
    <p>Please fix the following errors:</p>
    <% @fabric.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_for :fabric, :html => {:multipart => true}, url: fabrics_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

    <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>

<p>
  <%= f.label :length %>:
  <% if @action == "edit" %>
    <% p "FOOBUTT" %>
    <span id="slider_display"><%= @yardage %></span>
  <% else %>
  <% p @action %>

  BLAHALAH
    <span id="slider_display">FOOOFOOFFOOFO</span>
  <% end %>
  <%= f.text_field :length, :id => 'amount', :class => 'slider' %>
  <div id="slider"></div>
</p>

<p>
  <% if @action == "edit" %>
    <%= f.select(:width, options_for_select([45, 60], :selected => @width)) %>
    <% else %>
      <%= f.select(:width, options_for_select([45, 60])) %>
    <% end %>

</p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>

  <p>
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </p>

  <h2>Upload an image of your fabric, or skip this step for now</h2>
  <p>
    <%= f.file_field :swatch %>
  </p> 
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% if @action == "edit" %>
  <script>
  var length = '<%=@length%>'
  lengthSlider(length)</script>  
<% else %>
    <script>lengthSlider(0.125)</script>
<% end %>
 