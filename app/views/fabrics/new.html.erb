<h1>New Fabric Upload</h1>


<% if @errors != nil %> 
    <p>Please fix the following errors:</p>
    <% @fabric.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_for :fabric, :html => {:multipart => true}, url: fabrics_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

    <p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </p>

  <p>
    <%= f.label :length %><br>
    <%= f.text_field :length %>
    <%= f.text_field :test %>
  </p>

  <p>
    <%= f.label :width %><br>
    <%= f.text_field :width %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>

  <p>
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </p>

  <h2>Upload an image of your fabric, or skip this step for now</h2>
  <p>
    <%= f.file_field :swatch %>
  </p> 
 
  <p>
    <%= f.submit %>
  </p>
<% end %>




