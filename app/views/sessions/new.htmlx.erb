
<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body">
          <!-- <form class="form col-md-12 center-block"> -->
          <%= form_tag '/login', ({:class => "form col-md-12 center-block"}) do %>
            <div class="form-group">
              <!-- <input type="text" class="form-control input-lg" placeholder="Email"> -->
              <%= text_field_tag :email, nil, :class => "form-control input-lg", :placeholder => "Email" %>

            </div>
            <div class="form-group">
            <%= password_field_tag :password, nil, :class => "form-control input-lg", :placeholder => "Password" %>
            </div>
            <div class="form-group">
            <%= submit_tag "Sign In", :class => "btn btn-primary btn-lg btn-block" %>
              <!-- <button class="btn btn-primary btn-lg btn-block">Sign In</button> -->
              <% end %>
              <span class="pull-right"><a href="#">Register</a></span>
              <!-- <span><a href="#">Need help?</a></span> -->
            </div>
          </form>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <button class="btn"  data-dismiss="modal" aria-hidden="true">Cancel</button>
 	</div>
      </div>
  </div>
  </div>
</div>

