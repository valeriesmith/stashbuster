<%= form_for :user, :html => {:multipart => true}, url: users_path do |f| %>
  
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>


  <p>
   <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

   <p>
   <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
 
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password %> again<br>
    <%= f.password_field :password_confirmation %>
  </p>

  <h2>Upload an image of yourself, or skip this step for now</h2>
  <p>
    <%= f.file_field :avatar %>
  </p> 

  <p>
    <%= f.label :remote_avatar_url, "or image URL:" %><br>
    <%= f.text_field :remote_avatar_url %>
  </p>



<!-- TO DO:  birthday only month and day -->

<p><%= f.submit %></p>

<% end %>